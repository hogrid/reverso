{
  "name": "@reverso/admin",
  "version": "0.0.0",
  "description": "Admin panel UI for Reverso CMS built with React and shadcn/ui",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@reverso/core": "workspace:*",
    "@reverso/blocks": "workspace:*",
    "@reverso/forms": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "@tanstack/react-query": "^5.64.2",
    "zustand": "^5.0.3",
    "react-hook-form": "^7.54.2",
    "@hookform/resolvers": "^5.2.2",
    "zod": "^4.3.6",
    "tailwindcss": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "lucide-react": "^0.562.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogrid/reverso.git",
    "directory": "packages/admin"
  },
  "keywords": ["reverso", "cms", "admin", "panel", "react", "shadcn"],
  "author": "Emerson Nunes <emerson@hogrid.com>",
  "license": "MIT"
}
