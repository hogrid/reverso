{
  "name": "@reverso/forms",
  "version": "0.1.1",
  "description": "Form builder system for Reverso CMS",
  "homepage": "https://reverso.dev/docs/packages/forms",
  "bugs": {
    "url": "https://github.com/hogrid/reverso/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@reverso/core": "^0.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.54.2",
    "@hookform/resolvers": "^5.2.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.3",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogrid/reverso.git",
    "directory": "packages/forms"
  },
  "keywords": [
    "reverso",
    "cms",
    "forms",
    "builder",
    "react"
  ],
  "author": "Emerson Nunes <emerson@hogrid.com>",
  "license": "MIT"
}
