{
  "name": "@reverso/blocks",
  "version": "0.0.0",
  "description": "Block editor component for Reverso CMS built with Tiptap",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@reverso/core": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tiptap/core": "^3.17.1",
    "@tiptap/pm": "^3.17.1",
    "@tiptap/react": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "@tiptap/extension-highlight": "^3.17.1",
    "@tiptap/extension-image": "^3.17.1",
    "@tiptap/extension-link": "^3.17.1",
    "@tiptap/extension-placeholder": "^3.17.1",
    "@tiptap/extension-table": "^3.17.1",
    "@tiptap/extension-table-row": "^3.17.1",
    "@tiptap/extension-table-cell": "^3.17.1",
    "@tiptap/extension-table-header": "^3.17.1",
    "@tiptap/extension-text-align": "^3.17.1",
    "@tiptap/extension-underline": "^3.17.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "lucide-react": "^0.511.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogrid/reverso.git",
    "directory": "packages/blocks"
  },
  "keywords": ["reverso", "cms", "blocks", "editor", "tiptap", "wysiwyg"],
  "author": "Emerson Nunes <emerson@hogrid.com>",
  "license": "MIT"
}
