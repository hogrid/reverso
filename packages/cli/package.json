{
  "name": "@reverso/cli",
  "version": "0.0.0",
  "description": "Command line interface for Reverso CMS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "reverso": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@reverso/core": "workspace:*",
    "@reverso/scanner": "workspace:*",
    "@reverso/db": "workspace:*",
    "@reverso/api": "workspace:*",
    "commander": "^14.0.2",
    "chalk": "^5.4.1",
    "ora": "^9.1.0",
    "prompts": "^2.4.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogrid/reverso.git",
    "directory": "packages/cli"
  },
  "keywords": ["reverso", "cms", "cli", "command-line"],
  "author": "Emerson Nunes <emerson@hogrid.com>",
  "license": "MIT"
}
