{
  "name": "@reverso/scanner",
  "version": "0.1.1",
  "description": "AST parser for detecting data-reverso markers in React/Next.js code",
  "homepage": "https://reverso.dev/docs/packages/scanner",
  "bugs": {
    "url": "https://github.com/hogrid/reverso/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@reverso/core": "^0.1.1",
    "ts-morph": "^27.0.2",
    "glob": "^13.0.1",
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogrid/reverso.git",
    "directory": "packages/scanner"
  },
  "keywords": [
    "reverso",
    "cms",
    "scanner",
    "ast",
    "parser"
  ],
  "author": "Emerson Nunes <emerson@hogrid.com>",
  "license": "MIT"
}
