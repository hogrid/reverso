# Reverso CMS Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
REVERSO_PORT=3001
REVERSO_HOST=0.0.0.0

# Security (REQUIRED in production)
# Generate with: openssl rand -hex 32
REVERSO_COOKIE_SECRET=your-secure-cookie-secret-here

# API Key for programmatic access (optional)
REVERSO_API_KEY=

# CORS Configuration
REVERSO_CORS_ORIGIN=http://localhost:3000

# CSRF Protection
REVERSO_CSRF_ENABLED=true

# Database Configuration
# SQLite (default for development)
REVERSO_DB_PATH=.reverso/reverso.db

# PostgreSQL (for production, requires --profile postgres)
POSTGRES_USER=reverso
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=reverso
POSTGRES_PORT=5432
DATABASE_URL=postgresql://reverso:your-secure-password-here@postgres:5432/reverso
